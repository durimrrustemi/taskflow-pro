{
  "family": "taskflow-pro-dev",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/TaskFlowProTaskRole-dev",
  "containerDefinitions": [
    {
      "name": "taskflow-pro-dev",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/taskflow-pro-dev:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/taskflow-pro-dev",
          "awslogs-region": "REGION",
          "awslogs-stream-prefix": "taskflow-pro"
        }
      },
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "development"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "DB_NAME",
          "value": "taskflow_pro"
        },
        {
          "name": "DB_PORT",
          "value": "5432"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        },
        {
          "name": "AWS_REGION",
          "value": "REGION"
        },
        {
          "name": "CLIENT_URL",
          "value": "http://localhost:3000"
        }
      ],
      "secrets": [
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:TaskFlowProStack-dev-DBCredentials-XXXXXX:password::"
        },
        {
          "name": "DB_USER",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:TaskFlowProStack-dev-DBCredentials-XXXXXX:username::"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:TaskFlowProStack-dev-DBCredentials-XXXXXX:jwt_secret::"
        },
        {
          "name": "JWT_REFRESH_SECRET",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:TaskFlowProStack-dev-DBCredentials-XXXXXX:jwt_refresh_secret::"
        }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:3000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
